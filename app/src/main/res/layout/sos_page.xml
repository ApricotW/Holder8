<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:background="@color/backgroundBlack"
                                             android:id="@+id/sos_conslayout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <com.yinglan.alphatabs.AlphaTabsIndicator android:layout_width="match_parent"
                                              android:orientation="horizontal"
                                              android:background="@android:color/transparent"
                                              android:layout_height="135dp"
                                              android:id="@+id/sosTab"
                                              app:layout_constraintBottom_toBottomOf="parent"
                                              android:layout_marginBottom="120dp">
        <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/sos_btn_background"

                app:tabIconNormal="@mipmap/sos_nearby"
                app:tabIconSelected="@mipmap/sos_nearby_selected"
                app:tabText="附近的人"
                app:tabTextSize="10sp"
                app:textColorNormal="#808080"
                app:textColorSelected="@color/colorPrimary"
                app:badgeBackgroundColor="@color/colorAccent"
                app:paddingTexwithIcon="10dp"/>
        <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:background="@drawable/sos_btn_background"

                app:tabIconNormal="@mipmap/sos_emergency"
                app:tabIconSelected="@mipmap/sos_emergency_selected"
                app:tabText="汽车应急"
                app:tabTextSize="10sp"
                app:textColorNormal="#808080"
                app:textColorSelected="@color/colorPrimary"
                app:badgeBackgroundColor="@color/colorAccent"
                app:paddingTexwithIcon="10dp"/>
        <com.yinglan.alphatabs.AlphaTabView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="25dp"
                android:background="@drawable/sos_btn_background"

                app:tabIconNormal="@mipmap/sos_map"
                app:tabIconSelected="@mipmap/sos_map_selected"
                app:tabText="导航定位"
                app:tabTextSize="10sp"
                app:textColorNormal="#808080"
                app:textColorSelected="@color/colorPrimary"
                app:badgeBackgroundColor="@color/colorAccent"
                app:paddingTexwithIcon="10dp"/>
    </com.yinglan.alphatabs.AlphaTabsIndicator>
</android.support.constraint.ConstraintLayout>